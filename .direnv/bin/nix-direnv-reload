#!/usr/bin/env bash
set -e
if [[ ! -d "/home/pango/mirea/4-semester/mathmarathon/go" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/pango/mirea/4-semester/mathmarathon/go")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/pango/mirea/4-semester/mathmarathon/go" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/pango/mirea/4-semester/mathmarathon/go/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/pango/mirea/4-semester/mathmarathon/go/.envrc" "/home/pango/mirea/4-semester/mathmarathon/go/.direnv"/*.rc
